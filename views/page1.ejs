<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sudoku Puzzle</title>
  <link href="https://fonts.googleapis.com/css2?family=Exo:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
      background-color: #242424;
      font-family: 'Exo', sans-serif;
      color: #00cdaf;
    }
    .card {
      width: 450px;
      background-color: #141414;
      border: 1px solid #00cdaf;
      box-shadow: 0 0 10px #00cdaf;
      color: #00cdaf;
      margin: auto;
      padding: 16px;
      border-radius: 8px;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(9, 1fr);
      gap: 0.5px;
      padding: 0.5px;
    }
    .grid div {
      width: 40px;
      height: 40px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: bold;
      border: 1px solid #00cdaf;
    }
    .div4 {
      background-color: #00cdaf;
      color: #141414;
      width: 100%;
      padding: 10px;
      border-radius: 8px;
      text-align: center;
      margin-top: 16px;
    }
    .visible {
      display: block;
    }
  </style>
</head>
<body>
  <div class="flex items-center justify-center min-h-screen">
    <div class="card">
      <div class="card-header text-center">
        <h2 class="text-2xl font-bold mb-4">Puzzle Challenge</h2>
      </div>
      <div class="card-content">
        <div class="grid">
          <% const sudokuGrid = [
            [5, 3, 0, 0, 7, 0, 0, 0, 0],
            [6, 0, 0, 1, 9, 5, 0, 0, 0],
            [0, 9, 8, 0, 0, 0, 0, 6, 0],
            [8, 0, 0, 0, 6, 0, 0, 0, 3],
            [4, 0, 0, 8, 0, 3, 0, 0, 1],
            [7, 0, 0, 0, 2, 0, 0, 0, 6],
            [0, 6, 0, 0, 0, 0, 2, 8, 0],
            [0, 0, 0, 4, 1, 9, 0, 0, 5],
            [0, 0, 0, 0, 8, 0, 0, 7, 9]
          ]; %>
          <% sudokuGrid.flat().forEach((cell, index) => { %>
            <div style="background-color: <%= cell !== 0 ? '#333333' : '#141414' %>; color: #00cdaf;">
              <%= cell !== 0 ? cell : '' %>
            </div>
          <% }) %>
        </div>
        <div class="mt-4 text-center text-sm">
          Hint: Inspect the page and find the hidden button!
        </div>
        <div id="div4" class="div4" style="display:none;">
          <a href="/kbVtxXADjx24noayRNSwEyeWxQU6yv" style="color:black;">
            Click here!
          </a>
        </div>
      </div>
      <div class="card-footer text-center">
        <p id="status-message" style="color: #00cdaf;"></p>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
          if (mutation.type === 'attributes' && mutation.attributeName === 'style') {
            const targetElement = mutation.target;
            if (targetElement.id === 'div4' && targetElement.style.display !== 'none') {
              document.getElementById('status-message').innerText = 'You found the button! Click it to proceed.';
            }
          }
        });
      });

      const config = { attributes: true };
      const targetNode = document.getElementById('div4');
      if (targetNode) {
        observer.observe(targetNode, config);
      }


      targetNode.addEventListener('click', function() {
        document.getElementById('status-message').innerText = 'Congratulations! You can now move to the next question.';
      });
    });
  </script>
</body>
</html>
